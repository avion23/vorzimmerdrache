<section class="contact" id="kontakt">
    <div class="container">
        <h2 class="section-title" style="text-align: center;">{{ pageContent.contact.headline }}</h2>
        <p style="text-align: center; max-width: 600px; margin: 0 auto 2rem;">
            {{ pageContent.contact.subline }}
        </p>

        <form class="contact-form" id="contactForm" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
            <div class="form-group">
                <label for="name">{{ pageContent.contact.form.name.label }}</label>
                <input type="text" id="name" name="name" required placeholder="{{ pageContent.contact.form.name.placeholder }}">
            </div>
            <div class="form-group">
                <label for="phone">{{ pageContent.contact.form.phone.label }}</label>
                <input type="tel" id="phone" name="phone" required
                       pattern="{{ pageContent.contact.form.phone.pattern }}"
                       placeholder="{{ pageContent.contact.form.phone.placeholder }}"
                       title="{{ pageContent.contact.form.phone.title }}">
            </div>
            <div class="form-group">
                <label for="email">{{ pageContent.contact.form.email.label }}</label>
                <input type="email" id="email" name="email" placeholder="{{ pageContent.contact.form.email.placeholder }}">
                <input type="hidden" name="_subject" value="Neue Kontaktanfrage von VorzimmerDrache">
            </div>
            <div class="form-group">
                <label for="installations">{{ pageContent.contact.form.installations.label }}</label>
                <input type="text" id="installations" name="installations" placeholder="{{ pageContent.contact.form.installations.placeholder }}">
            </div>
            <div class="form-group">
                <label for="message">{{ pageContent.contact.form.message.label }}</label>
                <textarea id="message" name="message" rows="{{ pageContent.contact.form.message.rows }}" placeholder="{{ pageContent.contact.form.message.placeholder }}"></textarea>
            </div>
            <div class="form-group" style="background: var(--light-gray); padding: 1rem; border-radius: 4px; margin-top: 1rem;">
                <label style="font-weight: 400; font-size: 0.9rem; display: flex; align-items: flex-start; gap: 0.75rem;">
                    <input type="checkbox" required name="consent" style="width: 18px; height: 18px; margin-top: 0.15rem; flex-shrink: 0; cursor: pointer;">
                    <span>{{ pageContent.contact.form.consent.label | safe }}</span>
                </label>
            </div>
            <button type="submit" class="submit-btn">{{ pageContent.contact.cta }}</button>
            <div id="formFeedback" role="alert" aria-live="assertive" style="margin-top: 1rem;"></div>
        </form>
    </div>
</section>
