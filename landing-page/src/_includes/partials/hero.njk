<style>
    .hero {
        background: var(--primary); color: var(--white); padding: 4rem 0;
        border-bottom: 3px solid var(--accent);
    }
    .hero h1 {
        font-size: 2.2rem; line-height: 1.2; margin-bottom: 1rem; font-weight: 700;
    }
    .hero-subline {
        font-size: 1.15rem; color: var(--hero-subline); margin-bottom: 2rem;
        max-width: 700px;
    }
    .hero-badges {
        display: flex; gap: 0.75rem; flex-wrap: wrap; margin-bottom: 1.5rem;
    }
    .hero-badges .badge {
        background: rgba(249, 115, 22, 0.2); color: var(--accent);
        padding: 0.5rem 1rem; border-radius: 20px; font-size: 0.85rem;
        font-weight: 600; border: 1px solid var(--accent);
    }
    .hero-cta {
        display: inline-block; background: var(--accent); color: var(--white);
        padding: 1rem 2rem; text-decoration: none; font-weight: 700;
        font-size: 1.1rem; margin-bottom: 2rem;
    }
    .hero-cta:hover { background: var(--accent-darker); }
    .hero-image {
        margin-top: 2rem; border-radius: 8px; overflow: hidden;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }
    .hero-image img {
        width: 100%; height: auto; display: block; transition: transform 0.3s ease;
    }
    .hero-image:hover img { transform: scale(1.02); }
    @media (max-width: 768px) {
        .hero h1 { font-size: 1.6rem; }
        .hero-subline { font-size: 1rem; }
        .hero-badges { flex-direction: column; }
        .hero-badges .badge { text-align: center; }
        .hero-social-proof { font-size: 0.85rem; margin-top: 0.5rem; }
    }
    .hero-badges .badge img {
        display: inline-block;
        vertical-align: middle;
        margin-right: 4px;
    }
</style>

<section class="hero">
    <div class="container">
        <h1>{{ pageContent.hero.headline }}</h1>
        <p class="hero-subline">{{ pageContent.hero.subline }}</p>
        <div class="hero-badges">
            <span class="badge"><img src="/assets/images/icon_germany.webp" alt="Made in Germany" width="16" height="16" loading="lazy" decoding="async" style="vertical-align: middle; margin-right: 4px;" onerror="this.outerHTML='ðŸ‡©ðŸ‡ª <span style=\'vertical-align: middle; margin-right: 4px;\'>Made in Germany</span>';"> Made in Germany</span>
            <span class="badge"><img src="/assets/images/icon_lightning.webp" alt="Schnell" width="16" height="16" loading="lazy" decoding="async" style="vertical-align: middle; margin-right: 4px;" onerror="this.outerHTML='âš¡ <span style=\'vertical-align: middle; margin-right: 4px;\'>7 Tage Go-Live</span>';"> 7 Tage Go-Live</span>
            <span class="badge"><img src="/assets/images/icon_target.webp" alt="Zielgruppe" width="16" height="16" loading="lazy" decoding="async" style="vertical-align: middle; margin-right: 4px;" onerror="this.outerHTML='ðŸŽ¯ <span style=\'vertical-align: middle; margin-right: 4px;\'>Nur Photovoltaik</span>';"> Nur Photovoltaik</span>
        </div>
        <a href="{{ pageContent.hero.ctaLink }}" class="hero-cta">{{ pageContent.hero.cta }}</a>

        <p class="hero-social-proof" style="font-size: 0.95rem; color: var(--accent); font-weight: 600; margin-top: -1rem; margin-bottom: 2rem; text-align: center;">
            Bereits 50+ PV-Betriebe vertrauen uns
        </p>

        <div class="hero-image" style="aspect-ratio: 1100/733;">
            <img src="{{ pageContent.hero.image.src }}" alt="{{ pageContent.hero.image.alt }}"
                 width="1100" height="733" fetchpriority="high" decoding="async"
                 style="aspect-ratio: 1100/733; background: #1e293b;"
                 onerror="this.style.background='linear-gradient(135deg, #1e3a8a 0%, #1e293b 100%)'; this.alt='PV-Installateur auf dem Dach bei der Arbeit (Bild nicht verfÃ¼gbar)';">
        </div>
    </div>
</section>

<!-- Validation Section -->
<section class="pain-points" style="background: #fef3c7; border-bottom: none; padding: 2rem 0;">
    <div class="container">
        <div style="background: white; padding: 2rem; border-left: 4px solid var(--accent); border-radius: 4px; max-width: 800px; margin: 0 auto;">
            <h2 style="color: var(--primary); font-size: 1.4rem; font-weight: 700; margin-bottom: 1rem;">
                {{ pageContent.problem.validation.headline }}
            </h2>
            <p style="font-size: 1.1rem; line-height: 1.6; color: var(--dark-gray);">
                {{ pageContent.problem.validation.text | safe }}
            </p>
        </div>
    </div>
</section>

<!-- Target Personas with Images -->
<section class="pain-points" style="background: white; border-bottom: none;">
    <div class="container">
        <h2 class="section-title" style="text-align: center;">Das kennen Sie. Das frustriert.</h2>
        <p style="text-align: center; max-width: 700px; margin: 0 auto 2rem; color: var(--dark-gray);">
            Egal ob Dachdecker, Mechaniker, Friseur oder Handwerker - das Telefon klingelt immer zur Unzeit.
        </p>
        <div class="pain-grid" style="margin-top: 2rem;">
            {% for persona in painpoints.targetPersonas %}
            <div class="pain-item" style="background: #fffbeb; padding: 0; overflow: hidden;">
                <div style="position: relative; width: 100%; aspect-ratio: 16/9; overflow: hidden; background: #f3f4f6;">
                    <img src="{{ persona.image }}" alt="{{ persona.name }}"
                         style="width: 100%; height: 100%; object-fit: cover;"
                         loading="lazy" decoding="async" width="400" height="225"
                         onerror="this.style.display='none'; this.parentElement.style.background='linear-gradient(135deg, #f97316, #ea580c)';">
                </div>
                <div style="padding: 1.5rem;">
                    <h3 style="color: var(--primary); margin-bottom: 0.5rem;">{{ persona.name }}</h3>
                    <p style="font-size: 0.95rem; margin-bottom: 1rem;">{{ persona.pain }}</p>
                    <p style="font-size: 0.9rem; font-style: italic; color: var(--accent); border-left: 3px solid var(--accent); padding-left: 1rem;">
                        {{ persona.vossLabel }}
                    </p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Calibrated Questions -->
<section class="pain-points" style="background: var(--light-gray); border-bottom: none;">
    <div class="container">
        <h2 class="section-title" style="text-align: center;">Was passiert mit Ihrem Betrieb, wenn...</h2>
        <div class="pain-grid" style="margin-top: 2rem;">
            {% for item in pageContent.problem.questions %}
            <div class="pain-item" style="background: white;">
                <h3>{{ item.condition }}</h3>
                <p>{{ item.consequence }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

