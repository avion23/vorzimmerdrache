    {
      "parameters": {
        "jsCode": "const phone = $input.first().json.body.From || '';\nlet p = phone.replace(/[^0-9+]/g, '');\n\n// Already E.164 format (+country code)\nif (p.startsWith('+')) {\n  // Keep international numbers as-is (+43, +41, +1, etc.)\n} else if (p.startsWith('00')) {\n  // Convert 0049... to +49...\n  p = '+' + p.substring(2);\n} else if (p.startsWith('0') && p.length >= 10 && p.length <= 13) {\n  // German local format -> add +49\n  p = '+49' + p.substring(1);\n} else if (!p.startsWith('+') && p.length > 0) {\n  // Assume German number if no prefix\n  p = '+49' + p;\n}\n\n// Check if mobile (German prefixes + international support)\nconst mobilePrefixes = ['150', '151', '152', '155', '156', '157', '159', '160', '161', '162', '163', '165', '166', '167', '168', '169', '170', '171', '172', '173', '174', '175', '176', '177', '178', '179'];\nconst prefix = p.startsWith('+49') ? p.substring(3, 6) : null;\nconst is_mobile = prefix ? mobilePrefixes.includes(prefix) : true; // Assume mobile for international\n\nreturn [{ json: { phone: p, is_mobile } }];"
      },
      "id": "normalize-phone",
      "name": "Code - Normalize Phone",
