      "parameters": {
        "jsCode": "const sheetsData = $node['Google Sheets - Lookup Customer'].first().json;\nconst rows = sheetsData?.values || [];\n\n// Header-basierte Suche (robust gegen Spaltenänderungen)\nif (rows.length === 0) {\n  return [{ json: { phone: $json.phone, knownCustomer: null } }];\n}\n\nconst headers = rows[0];\nconst phoneIndex = headers.indexOf('Phone');\nconst optInIndex = headers.indexOf('OptIn_Status');\n\nif (phoneIndex === -1) {\n  return [{ json: { phone: $json.phone, knownCustomer: null, error: 'Phone column not found' } }];\n}\n\nlet knownCustomer = null;\nfor (let i = 1; i < rows.length; i++) {\n  if (rows[i][phoneIndex] === $json.phone) {\n    knownCustomer = {\n      row: rows[i],\n      phone: rows[i][phoneIndex],\n      optInStatus: optInIndex !== -1 ? rows[i][optInIndex] : null,\n      rowIndex: i\n    };\n    break;\n  }\n}\n\nreturn [{ json: { phone: $json.phone, knownCustomer } }];"
      },
